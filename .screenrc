# start at window 1
bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1

# informative statusbar
hardstatus off
hardstatus alwayslastline
hardstatus string "%{kw}%-w%{wr}%n %t%{-}%+w"

startup_message off
altscreen on

# scrollback
termcapinfo * ti@:te@
defscrollback 10000

# j to move down a window, k to move up. Like teh VIM!
bind j focus down
bind k focus up
