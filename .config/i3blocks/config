command=~/.config/i3blocks/$BLOCK_NAME
interval=5

[time]
command=date '+%Y-%m-%d %H:%M:%S'

[cpu]
label=CPU
# https://stackoverflow.com/questions/9229333/how-to-get-overall-cpu-usage-e-g-57-on-linux
command=mpstat | grep -A 5 "%idle" | tail -n 1 | awk -F " " '{print 100 - $ 12"%"}'a

[memory]
label=MEM
command= free -m | grep 'Mem:' | awk '{ print int($3/$2*100) "%"}'

[volume]
label=VOL
signal=1
interval=once
LONG_FORMAT=${VOL}%
MUTED_COLOR=#444444
