#!/usr/bin/env bash

main() {
	read -p "[man] program, utility, or function name: " program
	[[ -z "$program" ]] && echo "Invalid input. Aborting." && return

	man "$program"
	retval=$?
	[[ $retval -eq 0 ]] && exit 0

	yesno "Fall back to \"$program --help\""
	retval=$?
	[[ $retval -eq 1 ]] && exit 1

	command -v "$program"
	retval=$?
	if [[ $retval -eq 0 ]]; then
		"$program" --help | less
		exit 0
	fi

	echo "No such program found."
}

main

read -p "Press [ENTER] to continue"
exit 1
