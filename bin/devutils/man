#!/usr/bin/env bash

read -p "[man] program, utility, or function name: " program
[[ -z "$program" ]] && echo "Invalid input. Aborting." && exit 1

man "$program"
retval=$?
[[ $retval -eq 0 ]] && exit 0

yesno "Fall back to \"$program --help\""
retval=$?
[[ $retval -eq 1 ]] && exit 2

command -v "$program"
retval=$?
if [[ $retval -ne 0 ]]; then
  echo "No such program found."
  exit 1
fi

"$program" --help | less
