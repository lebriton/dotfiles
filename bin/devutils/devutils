#!/usr/bin/env bash

here=$(dirname "${BASH_SOURCE[0]}")
this=$(basename "${BASH_SOURCE[0]}")

executables=$(find "$here" -type f -executable -printf "%f\n" | grep -v "$this" | sort)
util=$(echo -e "$executables" | fzf --prompt "devutils> " --layout reverse)
[[ -z "$util" ]] && echo "Aborting." && exit 1

$here/$util
