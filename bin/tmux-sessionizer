#!/usr/bin/env bash

# Shamelessly stolen from https://github.com/ThePrimeagen/.dotfiles/blob/master/bin/.local/bin/tmux-sessionizer

root_dir="$HOME/workspace/projects"

selected_name=$(FZF_DEFAULT_COMMAND="find $root_dir -maxdepth 3 -name .git -type d -prune -printf '%h\n' | xargs -L1 basename" fzf --prompt "Select project to open with tmux: ")

if [[ -z "$selected_name" ]]; then
  exit 0
fi

selected="$root_dir/$selected_name"
selected_name=$(echo "$selected_name" | tr _ .)
tmux_running=$(pgrep tmux)

if [[ -z "$TMUX" ]] && [[ -z "$tmux_running" ]]; then
    tmux new-session -s "$selected_name" -c "$selected"
    exit 0
fi

if ! tmux has-session -t "$selected_name" 2> /dev/null; then
    tmux new-session -ds "$selected_name" -c "$selected"
fi

if [[ -z "$TMUX" ]]; then
    tmux attach-session -t "$selected_name"
else
    tmux switch-client -t "$selected_name"
fi
